[Unit]
Description="DepthAI control ROS2 node"
After=network.target

[Service]
Type=simple
User=sad
Group=sad
Restart=always
RestartSec=10
ExecStart=/bin/sh -c ". /opt/ros/foxy/setup_fog.sh; /opt/ros/foxy/bin/depthai_ctrl --ros-args --remap __ns:=$(env DRONE_DEVICE_ID)"

[Install]
WantedBy=multi-user.target
